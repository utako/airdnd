<div id="carousel-example-generic" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag "carousel7.jpg", { class: "carousel-image", height: "100px" } %>
    </div>
    <div class="carousel-caption">
      <h1>Find a Campaign to Join</h1>
      <h3>Play with people in over 34,000 cities and 192 countries.</h3>
      <div class="form">
        <%= render partial: 'search' %>
      </div>
    </div>
    <div class="item">
      <%= image_tag "carousel1.jpg", { class: "carousel-image", height: "100px" } %>
    </div>
  </div>


  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
