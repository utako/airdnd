<% content_for :body_class, "sign_up" %>
<%= render "layouts/errors" %>
<div class="session-form">
  <h1>Sign In</h1>
  <form action="<%= session_url %>" method="post" role="form">
    <%= form_auth_token %>
    <div class="form-group">
      <label>Email
        <input type="text" name="user[email]" class="form-control">
      </label>
    </div>
    <div class="form-group">
      <label>Password
        <input type="password" name="user[password]" class="form-control">
      </label>
    </div>
    <input type="submit" value="Sign In" class="btn btn-success">
  </form>
  <form action="<%= session_url %>" method="post" class='second-button'>
    <%= form_auth_token %>
    <input type="hidden" name="user[email]" class="form-control" value='guest'>
    <input type="hidden" name="user[password]" class="form-control" value='guestpassword'>
    <input type="submit" value="Sign In as Guest" class="btn btn-md btn-default" style='margin-left: 1pc'>
  </form>



    <!-- <button class="btn btn-md btn-default" style="margin-left: 1pc">Sign In as Guest</button> -->
    <!-- <a href="" class="new-user" data-toggle="modal" data-target="#myModal">New to AirDnD?</a> -->
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
