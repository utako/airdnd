<div id="carousel-example-generic" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
            <img alt="Carousel7" class="carousel-image" height="100px" src="/assets/carousel7.jpg">
    </div>
    <div class="carousel-caption">
      <h1>Find a Campaign to Join</h1>
      <h3>Play with people in over 34,000 cities and 192 countries.</h3>
      <div class="form">
        <div class="search-form">
            <div class="form-group">
              <div class="location-wrapper">
                <input type="text" name="request[location]" class="form-control" value="Where do you want to play?">
              </div>
              <div class="style-wrapper">
                <select name="request[game_style]" class="form-control">
                  <% _.each(gameStyles, function(gameStyle) { %>
                    <option value="<%= gameStyle %>"><%= gameStyle %></option>
                  <% })%>
                </select>
              </div>
              <div class="system-wrapper">
                <select name="request[game_system]" class="form-control">
                  <% _.each(gameSystems, function(gameSystem) { %>
                    <option value="<%= gameSystem %>"><%= gameSystem %></option>
                  <% })%>
                </select>
              </div>
              <div class="setting-wrapper">
                <select name="request[setting]" class="form-control">
                  <% _.each(settings, function(setting) { %>
                    <option value="<%= setting %>"><%= setting %></option>
                  <% })%>
                </select>
              </div>
              <div class="startdate-wrapper">Campaign Start
                <input value="test" type="date" name="request[start_date]" id="request_start_date">
              </div>
              <div class="enddate-wrapper">Campaign End
                <input type="date" name="request[end_date]" id="request_end_date">
              </div>
              <div class="numplayers-wrapper">
                <select name="request[num_players]" class="form-control">
                  <% _.each(numPlayers, function(numPlayer) { %>
                    <option value="<%= numPlayer %>"><%= numPlayer %></option>
                  <% })%>
                </select>
              </div>
            </div>
            <input type="submit" value="Search" class="btn btn-success">
          </form>
        </div>
      </div>
    </div>
    <div class="item">
      <img alt="Carousel6" class="carousel-image" height="100px" src="/assets/carousel6.png">
    </div>
    <div class="item">
      <img alt="Carousel5" class="carousel-image" height="100px" src="/assets/carousel4.jpg">
    </div>
  </div>


  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
